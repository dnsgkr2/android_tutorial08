<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/crime_list_item_solvedCheckBox"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/crme_list_item_titleTextView"
        android:layout_toLeftOf="@id/crime_list_item_solvedCheckBox"
        android:text="Crime title"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/crime_list_item_dateTextView"
        android:layout_below="@id/crme_list_item_titleTextView"
        android:text="1999.12.12:121212"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>